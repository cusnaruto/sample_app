<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("shared.micropost_form.placeholder") %>
  </div>
  <span class="image">
    <%= f.file_field :image, accept: Settings.form.image_type %>
  </span>
  <%= f.submit t("shared.micropost_form.submit"), class: "btn btn-primary" %>
<% end %>
